
<%- include('../partials/header.ejs') %>

<div class='container'>
    <h1 style='text-align: center;'>Edit <%= ground.name %></h1>
    <div style='width:30%; margin: 0 auto; margin: 25px auto;'>
        <form action="/campgrounds/<%= ground.id %>?_method=PUT" method='POST'>
            <div class='form-group'>
                <input class='form-control' type="text" name="title" value='<%= ground.name %>'>
            </div>
            <div class='form-group'>
                <input class='form-control' type="text" name="image" placeholder="<%= ground.image %>">
            </div>
            <div class='form-group'>
                <input class='form-control' type="textarea" name="desc" placeholder="<%= ground.description %>">
            </div>
            <div class='form-group'>
                <input class='form-control' type="textarea" name="price" placeholder="<%= ground.price %>">
            </div>
            <div class='form-group'>
                <button class='btn btn-lg btn-primary form-control btn-block'>Submit</button>
            </div> 
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    
    
</div>
<%- include('../partials/footer.ejs') %>