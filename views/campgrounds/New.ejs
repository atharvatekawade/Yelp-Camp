<%- include('../partials/header.ejs') %>
<br>
<div class='container'>
    <h1 style='text-align: center;'>Create a new campground</h1>
    <div style='width:30%; margin: 0 auto; margin: 25px auto;'>
        <form action="/campgrounds" method='POST'>
            <div class='form-group'>
                <input class='form-control' type="text" name="title" placeholder="Title">
            </div>
            <div class='form-group'>
                <input class='form-control' type="text" name="image" placeholder="Image">
            </div>
            <div class='form-group'>
                <input class='form-control' type="textarea" name="desc" placeholder="Description">
            </div>
            <div class='form-group'>
                <input class='form-control' type="textarea" name="price" placeholder="Price">
            </div>
            <div class='form-group'>
                <button class='btn btn-lg btn-primary form-control btn-block'>Submit</button>
            </div> 
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    
    
</div>
<%- include('../partials/footer.ejs') %>